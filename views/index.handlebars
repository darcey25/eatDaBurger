
<h1>Burgers!</h1>
<div class="container-fluid">
  <div class="row">
    <div class="col-3">
      <h2>Burgers that are not eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            <li>
              {{id}}. {{burger}}
              <button class="eat-burger" data-id="{{id}}" data-hungry="true">Devour</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-3">
      <h2>Add a Burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="bu">Burger Name:</label>
            <input type="text" id="bu" name="name">
          </div>
          <button class="btn btn-primary" type="submit">Add Burger</button>
        </form>
      </div>

      <div class="col-3">
        <h2>Burgers that are eaten!</h2>
        <ul>
          {{#each burgers}}
            {{#if eaten}}
              <li>
                {{id}}. {{burger}}
              </li>
            {{/if}}
          {{/each}}
        </ul>
      </div>
  </div>
</div>

